<!-- Image comparison slider view-->
<div id="slider_view">
    <div class="row m-0 p-1 border justify-content-center">
        <div class="col-12 p-0">
            <div class="twentytwenty-container">
                <div class="container-16-9">
                    <img src="<%= post.resultImg %>" class="container-content">
                    <img src="<%= post.contentImg %>" class="container-content">
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Image original view-->
<div id="original_view" class="d-none">
    <div class="row m-0 p-1 border">
        <div class="col-12 col-lg-9 p-0">
            <div class="container-16-9">
                <img id="resultImg" src="<%= post.resultImg %>" class="container-content p-1">
            </div>
        </div>
        <div class="col-12 col-lg-3 p-0">
            <div class="row m-0">
                <div class="col-6 col-lg-12 p-0">
                    <div class="container-square">
                        <% var img_path = "/data/styles/" + post.selectStyle + ".jpg" %>
                        <img id="styleImg" src="<%= img_path %>" class="container-content p-1">
                    </div>
                </div>
                <div class="col-6 col-lg-12 p-0">
                    <div class="container-square">
                        <img id="contentImg" src="<%= post.contentImg %>" class="container-content p-1">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>