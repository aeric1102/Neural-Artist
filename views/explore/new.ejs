<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header_element %>
    <link href="/stylesheets/explore/new.css" rel="stylesheet" type="text/css">
</head>
<body>
<% include ../partials/navbar %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-12 col-lg-8 p-0">
            <!-- Image -->
            <div class="row m-0 p-1 border">
                <div class="col-12 col-lg-9 p-0">
                    <div class="container-16-9">
                        <img id="resultImg" src="<%= imgData.resultImg %>" class="container-content p-1">
                    </div>
                </div>
                <div class="col-12 col-lg-3 p-0">
                    <div class="row m-0">
                        <div class="col-6 col-lg-12 p-0">
                            <div class="container-square">
                                <% var img_path = "/data/styles/" + imgData.selectStyle + ".jpg" %>
                                <img id="styleImg" src="<%= img_path %>" class="container-content p-1">
                            </div>
                        </div>
                        <div class="col-6 col-lg-12 p-0">
                            <div class="container-square">
                                <img id="contentImg" src="<%= imgData.contentImg %>" class="container-content p-1">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Body -->
            <% if (!currentUser){ %>
                <hr>
                <a href="/login" class="btn btn-primary btn-block">Login to share your pictures!</a>
            <% } else{ %>
                <div class="card border border-top-0 rounded-0">
                    <div class="card-body">
                        <h2 class="card-title">
                            <img class="avatar-lg mr-0 rounded-circle" src="/stylesheets/avatar-placeholder.jpg">
                            <%= currentUser.username %>
                        </h2>
                        <form action="/explore" method="POST">
                        <input type="hidden" name="contentImg" value="<%= imgData.contentImg %>">
                        <input type="hidden" name="selectStyle" value="<%= imgData.selectStyle %>">
                        <input type="hidden" name="resultImg" value="<%= imgData.resultImg %>">
                        <textarea id="description_input" class="form-control" name="description" rows="8" placeholder="Say something about your pictures, <%= currentUser.username %>."></textarea>
                        <button id="submitBtn" class="mt-1 btn btn-primary btn-block">Share!</button>
                        </form>
                    </div>
                </div>
            <% } %>
        </div>
    </div>
</div>


<% include ../partials/footer_element %>
<script src="/scripts/explore/new.js" type="text/javascript"></script>
</body>
</html>