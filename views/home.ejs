<% include ./partials/header %>

<div class="jumbotron">
    <div class="container">
        <h2><i class="fas fa-paint-brush"></i> Stylize Your Image </h1>
    </div>
</div>

<div class="container">
    <form id="img_stylize_form" class="" action="/" method="POST" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-lg-6">
                <div class="card">
                    <div class="img_container">
                        <img id="contentImg" src="<%= contentImgPath %>" alt="..." class="img-fluid card-img-top">
                    </div>
                    <div class="card-body">
                        <label class="form-control btn btn-outline-secondary">
                            <input class="form-control d-none" type="file" name="selectContent" id="selectContent" required>
                            Choose File
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group col-lg-6">
                <div class="card">
                    <div class="img_container">
                        <img id="styleImg" src="#" alt="..." class="img-fluid card-img-top">
                    </div>
                    <div class="card-body">
                        <select class="form-control" name="selectStyle" id="selectStyle">
                            <% var options = [ "wave", "the_shipwreck_of_the_minotaur", "the_scream", "rain_princess", "la_muse", "udnie" ] %>                       
                            <% for(var i = 0; i < options.length; i++){ %>
                                <% var selected = (selectStyle === options[i]) ? "selected" : ""; %>
                                <option <%= selected %>><%= options[i] %></option>
                            <% }  %> 
                        </select>
                    </div>
                </div>
            </div>
            <button class="btn btn-primary btn-block">Submit!</button>
        </div>
    </form>
    <hr>
    <div class="row justify-content-center">
        <div class="col-sm-8">
            <div id="loading_spinner" class="text-center">
                <div class="spinner-border" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
            <% if (resultImgPath !== "#"){ %>
                <div class="text-center">
                    <img id="resultImg" src="<%= resultImgPath %>" alt="..." class="img-fluid">
                </div>
            <% } %>
        </div>
    </div>
</div>


<% include ./partials/footer %>