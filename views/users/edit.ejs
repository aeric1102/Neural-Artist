<!DOCTYPE html>
<html>
<head>
    <% include ../partials/header_element %>
    <link href="/stylesheets/users/edit.css" rel="stylesheet" type="text/css">
</head>
<body>
<% include ../partials/navbar %>



<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="mb-1 pb-0 pt-4">
                <form action="/users/<%= user._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
                    <div class="row">
                        <div class="col-12 col-lg-3">
                            <div class="text-center">
                                <img id="avatarImg" class="text-center avatar-profile rounded-circle" src="<%= user.avatar %>">
                                <h1 class="lead"><%= user.username %></h1>
                                <label for="uploadAvatar">
                                    <div class="btn btn-primary">
                                        Upload Image
                                    </div>
                                    <input class="form-control d-none p-0 border-0" type="file" name="avatar" id="uploadAvatar" accept="image/*">
                                </label>
                            </div>
                        </div>
                        <div class="col-12 col-lg-7">
                            <div class="form-group">
                                <label for="name_profile">Name</label>
                                <input class="form-control" type="text" name="user[name]" id="name_profile" placeholder="Name" value="<%= user.name %>">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input class="form-control" type="text" name="user[email]" id="email" placeholder="Email" value="<%= user.email %>">
                            </div>
                            <div class="form-group">
                                <label for="user_bio">Bio</label>
                                <textarea id="user_bio" class="form-control" name="user[bio]" rows="8" maxlength="500"><%= user.bio %></textarea>
                            </div>
                            <div class="mt-1 d-flex justify-content-end">
                                <a class="btn btn-light" href="/users/<%= user._id %>">Cancel</a>
                                <button id="submitBtn" class="mx-1 btn btn-secondary">Save</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<% include ../partials/footer_element %>
<script src="/scripts/users/edit.js" type="text/javascript"></script>
</body>
</html>